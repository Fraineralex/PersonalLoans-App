@*Strong typed*@
@model Application.ViewModel.LoanListViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<script type="text/javascript">

    $("#interest").val('22%');


</script>

<div class="text-center mt-3">

    <div class="col-6 mx-auto">
        <h1 class="display-4 fw-bold text-white">Personal Loans App</h1>
        <p class="fs-5 text-white">Welcome to Personal Loans App where you can calculate the installments and interests of your loans regardless of the capital.</p>
    </div>

    <div class="row mt-3 mb-5 mt-5">
        <div class="col-6 mx-auto">
            <div class="card bg-light rounded mb-5">
                <div class="card-header bg-dark text-center ms-0 me-0 rounded text-white">
                    <h3>Fill in the required fields</h3>
                </div>

                @if (Model.LoanList.Count != 0){
                    <h2 class="text-center mt-3 text-primary fw-bold">@Model.LoanList[Model.LoanList.Count - 1].Result</h2>
                }
                   
                <div class="card-body px-3">

                    <form method="post" asp-controller="Home" asp-action="CalculateLoan">

                        <div class="row align-items-center text-center">
                            <div class="col-auto">
                                <label class="col-form-label fw-bold fs-5 ms-2 me-4" style="margin-right: 2px">Loan amount: </label>
                            </div>

                            <div class="ms-3 col-8">
                                    <input type="number" class="form-control" placeholder="Enter the loan amount" name="LoanAmount" required />
                            </div>
                        </div>

                        <div class="row align-items-center text-center">
                            <div class="col-auto">
                                <label class="col-form-label fw-bold fs-5 ms-2" style="margin-right: 4px">Loan Type:</label>
                            </div>

                            <div class="ms-5 col-8">
                                <div class="input-group mb-3 px-3 mt-3">
                                    <select class="form-select d-inline" name="LoanType" id="rate-type" required>
                                        <option selected disabled>Select the loan type</option>
                                        <option value="1">Personal</option>
                                        <option value="2">Automovil</option>
                                        <option value="3">Mortgage</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row align-items-center text-center">
                            <div class="col-auto">
                                <label class="col-form-label fw-bold fs-5 ms-2">Month amount: </label>
                            </div>

                            <div class="ms-1 col-8">
                                <div class="input-group mb-3 px-3 mt-3">
                                    <select class="form-select d-inline" name="MonthAmount" required>
                                        <option selected disabled>Select the month amount</option>
                                        @{
                                            int value = 1;
                                            for (int i = 12; i <= 120; i += 6)
                                            {
                                                                        <option value="@value">@i meses</option>

                                                value++;
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row align-items-center text-center">
                            <div class="col-auto">
                                <label class="col-form-label fw-bold fs-5 ms-2 me-1">Interest rate (%): </label>
                            </div>

                            <div class="col-8">
                                <input type="text" class="form-control" name="YearInterest" id="rate-input" required disabled value="">
                            </div>
                        </div>

                        <button class="btn btn-lg btn-primary float-end me-2 mt-3" type="submit">Calculate</button>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
